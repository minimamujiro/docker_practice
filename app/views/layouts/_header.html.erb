<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo", class: "navbar-brand" %>
    <button id="hamburger" type="button" class="navbar-toggler" aria-label="Toggle navigation" aria-expanded="false" aria-controls="navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <nav class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li><%= link_to "Home", root_path, class: "nav-link" %></li>
        <li><%= link_to "Help", help_path, class: "nav-link" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#', class: "nav-link"%></li>
          <li class="nav-item dropdown">
            <a href="#" id="account" class="nav-link dropdown-toggle">
              Account
            </a>
            <ul id="dropdown-menu" class="dropdown-menu dropdown-menu-end">
              <li><%= link_to 'Profile', current_user, class: 'dropdown-item' %></li>
              <li><%= link_to 'Settings', '#', class: 'dropdown-item' %></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to 'Log out', logout_path, class: 'dropdown-item', data: { 'turbo-method': :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>